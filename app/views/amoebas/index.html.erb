<h1>Listing Amoebas</h1>
<table>
  <tr>
    <th>Avatar</th>
    <th>Name</th>
    <th>Generation</th>
    <th>Talent</th>
    <th></th>
  </tr>
  <% @amoebas.map do |am| %>
  <tr>
    <td><img src="<%= am.avatar %>" width="75"></td>
    <td><%= link_to am.name, am %></td>
    <td><%= am.generation %></td>
    <td><%= am.talent.name %></td>
    <td><%= link_to "Destroy", "/amoebas/#{am.id}", method: :delete %></td>
  </tr>
  <% end %>

</table>

<%= link_to "New Amoeba", new_amoeba_path %>
